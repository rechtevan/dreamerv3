# Coverage configuration for DreamerV3
# This file works alongside [tool.coverage] in pyproject.toml
# Some tools prefer .coveragerc format

[run]
source = dreamerv3, embodied
# Enable subprocess coverage tracking (for multiprocessing code like driver.py)
# Set COVERAGE_PROCESS_START=.coveragerc to enable this
concurrency = multiprocessing
parallel = True
omit =
    # Test files
    */tests/*
    */perf/*
    *_test.py
    # Visualization utilities (tested manually)
    plot.py
    scores/view.py
    */viz/*
    *visualizer.py
    *_viz.py
    # Interactive modules (not for automated testing)
    */interactive.py
    */manual_*.py
    # Setup files
    setup.py
    */setup.py
    # Docker entrypoint
    entrypoint.sh

[report]
# Precision for coverage percentage
precision = 2
# Show lines that weren't executed
show_missing = True
# Skip files with no code
skip_empty = True
# Sort by coverage percentage (lowest first)
sort = Cover
exclude_lines =
    # Standard pragmas
    pragma: no cover
    # Defensive programming
    raise AssertionError
    raise NotImplementedError
    # Debugging code
    if __name__ == .__main__.:
    if TYPE_CHECKING:
    # Abstract methods
    @abstractmethod
    @abc.abstractmethod
    # Type checking blocks
    if typing.TYPE_CHECKING:
    # Ellipsis for abstract/stub methods
    \.\.\.

[html]
directory = .local/htmlcov

[json]
output = .local/coverage.json

[xml]
output = .local/coverage.xml
